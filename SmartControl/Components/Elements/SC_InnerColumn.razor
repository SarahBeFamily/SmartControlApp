@{
	var ColWidth = "";
	if (ColumnWidth1 != false)
	{
		ColWidth = "col-6 col-md-4 col-lg-3 col-xl-2";
	}

	if (ColumnWidth2 != false)
	{
		ColWidth = "col-6 col-xl-4";
	}

	if (ColumnWidth3 != false)
	{
		ColWidth = "col-lg-6 col-xl-8";
	}

	if (ColumnWidth4 != false)
	{
		ColWidth = "col-6 col-lg-9 col-xl-10";
	}

	if (ColumnWidth5 != false)
	{
		ColWidth = "col-12";
	}
	
}

<div class="@ColWidth gutter-lg-max">
	@ChildContent
</div>
